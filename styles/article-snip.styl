@import 'var'

.ArticleSnip
  margin: 20px 0
  .ArticleSnip--link
    color: #000
    text-decoration: none
    .ArticleSnip--title
      font-size: snip-size
      display: inline
      padding-bottom: 1px
    .ArticleSnip--title:hover
      font-style: italic
    .ArticleSnip--summernote
      .ArticleSnip--summernote-child
        word-break: break-all
        font-family: serif-fonts
        p
          text-align: left
        img
          width: 90% !important
          margin: 0 auto
  .ArticleSnip--link:hover
    cursor: pointer
    .ArticleSnip--title
      font-style: italic
  .Article-snip--tags
    margin: 15px 0 0 0
    .Article-snip--tag
      display: inline-block
      padding: 5px
      margin: 0 5px 0 0
    .Article-snip--tag:hover
      cursor: pointer
      animation: color-change .3s forwards